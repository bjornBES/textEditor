<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="App">

  <Application.Styles>
    <!-- Base theme -->
    <FluentTheme/>

    <!-- AvaloniaEdit theme -->
    <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />

    <!-- Custom MenuItem style -->
    <Style Selector="MenuItem">
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="Padding" Value="6,4"/>
    </Style>

    <!-- Hack: adjust TreeViewItem header margin -->
    <Style Selector="TreeViewItem /template/ ContentPresenter#PART_HeaderPresenter">
      <Setter Property="Margin" Value="-6,0,0,0"/>
    </Style>
  </Application.Styles>

  <Application.Resources>
    <!-- Override indent per level -->
    <x:Double x:Key="TreeViewItemIndent">4</x:Double>
  </Application.Resources>
</Application>
